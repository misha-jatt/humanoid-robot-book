# --- RAG Pipeline Configuration ---
# Path to the ChromaDB vector store created by the ingestion script
DB_DIRECTORY="db"

# Embedding model to use (must match the one from ingestion)
EMBEDDING_MODEL_NAME="all-MiniLM-L6-v2"

# --- LLM Configuration ---
# Set the model name for the generator (e.g., gpt-3.5-turbo, gpt-4)
OPENAI_MODEL_NAME="gpt-3.5-turbo"

# --- API Keys ---
# Your secret API key for OpenAI
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key-here"

# Your secret API key for Cohere (for re-ranking)
# Get yours at: https://dashboard.cohere.com/api-keys
COHERE_API_KEY="your-cohere-api-key-here"

# --- JWT Authentication ---
# Secret key for JWT token signing
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY="your-generated-secret-key-here"
